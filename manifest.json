{
    "manifest_version": 3,
    "name": "Markdown Sidebar",
    "version": "0.1.0",
    "description": "Displays organized links and notes from Markdown text in a sidebar.",
  
    "icons": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "96": "icons/icon96.png",
      "128": "icons/icon128.png"
    },
  
    "permissions": [
      "storage",
      "tabs"
    ],
  
    "sidebar_action": {
      "default_panel": "sidebar/sidebar.html",
      "default_title": "Markdown Links Sidebar",
      "default_icon": "icons/icon48.png"
    },
  
    "browser_specific_settings": {
      "gecko": {
        "id": "markdown-sidebar@doran.au"
      }
    },

    "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self';"
    }
}
